<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <meta name="description" content="בחירות בישראל" />
    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>



    <script src="~/Scripts/Graph/ng-google-chart.js"></script>

</head>
<body ng-app="google-chart-example">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            @Html.ActionLink(Resources.Resource.AppName, "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Resources.Resource.HomePage, "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <img src="http://upload.wikimedia.org/wikipedia/commons/thumb/d/d4/Flag_of_Israel.svg/40px-Flag_of_Israel.svg.png" />    <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>



    @RenderSection("scripts", required: false)

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-58135096-1', 'auto');
        ga('send', 'pageview');

    </script>
    <script>
        var ang = angular.module('google-chart-example', ['googlechart']);

    </script>

    <script>

        ang.controller("MainCtrl", function ($scope) {

            $scope.chartObject = {};

            $scope.onions = [
                { v: "Onions" },
                { v: 3 },
            ];

            $scope.chartObject.data = {
                "cols": [
                    { id: "t", label: "Topping", type: "string" },
                    { id: "s", label: "Slices", type: "number" }
                ], "rows": [
                    {
                        c: [
                           { v: "Mushrooms" },
                           { v: 3 },
                        ]
                    },
                    { c: $scope.onions },
                    {
                        c: [
                           { v: "Olives" },
                           { v: 78 }
                        ]
                    },
                    {
                        c: [
                           { v: "Zucchini" },
                           { v: 1 },
                        ]
                    },
                    {
                        c: [
                           { v: "Pepperoni" },
                           { v: 2 },
                        ]
                    }
                ]
            };
         
            // $routeParams.chartType ="ColumnChart";// BarChart or PieChart or ColumnChart...
            $scope.chartObject.type = "ColumnChart";// $routeParams.chartType;
            $scope.chartObject.options = {
                'title': 'How Much Pizza I Ate Last Night'
            }

            $scope.chart = $scope.chartObject;
        });


    </script>
</body>

</html>
